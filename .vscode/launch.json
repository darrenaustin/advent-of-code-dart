{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "all days",
            "request": "launch",
            "type": "dart",
            "program": "bin/aoc.dart",
        },
        {
            "name": "interactive",
            "request": "launch",
            "type": "dart",
            "program": "bin/aoc.dart",
            "args": ["--year", "${input:year}", "${input:day}"],
        },
        {
            "name": "current",
            "request": "launch",
            "type": "dart",
            "program": "bin/aoc.dart",
            "args": ["--year", "2016", "12"],
        }
        {
            "name": "update days",
            "request": "launch",
            "type": "dart",
            "program": "tools/update_days.dart",
        },

    ],
    "inputs": [
        {
            "id": "year",
            "type":"promptString",
            "description": "AoC Year",
            "default": "2016"
        },
        {
            "id": "day",
            "type":"promptString",
            "description": "AoC Day",
            "default": ""
        }
    ]
}